<main class="container">
  <%= link_to sanitize("&larr; Back to posts"), posts_path, { style: 'margin-left: 100px;' } %>
  <div class="header">
    <h3>
      <%= "Title: #{@post.title}" %>
    </h3>
    <h4>
      <%= "Article: #{@post.title}" %>
    </h4>
  </div>

  <%#= turbo_stream_from @post %>

  <div>
    <%= turbo_frame_tag @post do %>
      <%= link_to 'Edit', edit_post_path(@post), class: 'btn, rtn-warning' %>
    <% end %>
  </div>
</main>
