<%= simple_form_for post, html: { class: 'post form' } do |f| %>
  <% if post.errors.any? %>
    <div class='error-message'>
      <%= post.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.label :title %>
  <%= f.input :title, input_html: { autofocus: true }, label: false %>
  <%= f.label :article %>
  <%= f.input :article, label: false %>

  <%= link_to 'Cancel', posts_path, class: 'btn btn--light' %>
  <%= f.submit class: 'btn btn--secondary' %>
<% end %>
