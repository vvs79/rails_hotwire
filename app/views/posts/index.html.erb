<main class='container'>
  <%= turbo_frame_tag Post.new do %>
    <div class='header'>
      <h1 class='font-bold text-4xl'>Posts</h1>
      <%= link_to 'New post', new_post_path, class: 'btn btn--primary' %>
    </div>
  <% end %>

  <hr/>

  <%= turbo_frame_tag :posts do %>
    <%= render @posts %>
  <% end %>
</main>
